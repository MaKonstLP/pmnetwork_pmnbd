<div class="form_wrapper">
	<div class="form_close" data-close-popup>

	</div>

	<div class="form_main">

		<div class="form_title">
			<p class="form_title_main">{{title}}</p>
		</div>

		<form class="form_block" action="/ajax/form">

			<div class="form_inputs">
				<div class="input_wrapper">
					<input type="text" name="name" data-required placeholder="Как Вас зовут?" class="not_check_approove"/>
				</div>
				<div class="input_wrapper">
					<input type="text" name="phone" data-required placeholder="Номер телефона" />
				</div>
				<div class="input_wrapper">
					<input type="text" name="email" data-required placeholder="Электронная почта" />
				</div>
				<div class="input_wrapper date_wrapper">
					<input type="text" name="date" data-required disabled placeholder="Желаемая дата" class="not_check_approove"/>
					<div class="input_wrapper_date_wrapper" style="display: none;">
						
					</div>
				</div>
				<div class="input_wrapper _big_width">
					<input type="text" name="comment" placeholder="Комментарий" />
				</div>
			</div>

			<div class="form_submit">
				<button class="_button">Отправить</button>
				<div class="form_policy checkbox_item _active" data-action="form_checkbox">
					<input type="checkbox" name="policy" class="personalData" checked="">
					<p class="checkbox_pseudo" >Я согласен с <a href="#">политикой обработки персональных данных</a></p>
				</div>
			</div>
				
		</form>

	</div>
	<div class="form_success">

	</div>
</div>