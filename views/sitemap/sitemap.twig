<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	<url>
		<loc>{{host}}</loc>
	</url>
	{% if isMain %}
		<url>
			<loc>{{host}}/politika/</loc>
		</url>
		<url>
			<loc>{{host}}/blog/</loc>
		</url>
		{% for post in posts %}
			<url>
				<loc>{{host}}/blog/{{post.alias}}/</loc>
			</url>
		{% endfor %}
	{% endif %}

	{% if collections %}
		<url>
			<loc>{{host}}/collection/</loc>
		</url>
		{% for collection in collections %}
			<url>
				<loc>{{host}}/collection/{{collection.alias}}/</loc>
			</url>
		{% endfor %}
	{% endif %}

	{% if metro_stations %}
		<url>
			<loc>{{host}}/stancii-metro/</loc>
		</url>
		{% for metro in metro_stations %}
			<url>
				<loc>{{host}}/catalog/metro-{{metro.alias}}/</loc>
			</url>
		{% endfor %}
	{% endif %}
	
	<url>
		<loc>{{host}}/catalog/</loc>
	</url>

	{% for slice in slices %}
		<url>
			<loc>{{host}}/catalog/{{slice.alias}}/</loc>
		</url>
	{% endfor %}

	{% for rest in rests %}
		<url>
			<loc>{{host}}/catalog/{{rest.restaurant_slug}}/</loc>
		</url>
		{% for room in rest.rooms %}
		<url>
			<loc>{{host}}/catalog/{{rest.restaurant_slug}}/{{room.slug}}/</loc>
		</url>
		{% endfor %}
	{% endfor %}

</urlset>
